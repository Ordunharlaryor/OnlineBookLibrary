@using Library.Shared.Model
@model List<UserResponseDto>

<h1>Users</h1>

<p>
    <a asp-controller="User" asp-action="AddUser">Add User</a>
    <a asp-controller="User" asp-action="GetAllUsers">Refresh</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>UserName</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a asp-controller="User" asp-action="GetUser" asp-route-userId="@user.Id">Details</a>
                <a asp-controller="User" asp-action="UpdateUser" asp-route-userId="@user.Id">Edit</a>
                <a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@user.Id" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>