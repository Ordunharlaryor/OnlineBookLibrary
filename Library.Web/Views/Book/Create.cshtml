@using Library.Shared.Model
@model BookCreateDto

<h2>Add a new book</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@using (Html.BeginForm("Create", "Book", FormMethod.Post))
{
    <div class="form-group">
        <label for="title">Title:</label>
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        @Html.TextBoxFor(model => model.Author, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="publisher">Publisher:</label>
        @Html.TextBoxFor(model => model.Publisher, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="isbn">ISBN:</label>
        @Html.TextBoxFor(model => model.ISBN, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="imageUrl">Image URL:</label>
        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="yearPublished">Year Published:</label>
        @Html.EditorFor(model => model.YearPublished, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @*<div class="form-group">
        <label for="subCategoryId">Sub Category:</label>
        @Html.DropDownListFor(model => model.SubCategoryId, new SelectList(ViewBag.SubCategories, "Id", "Name"), "- Select -", new { @class = "form-control" })
    </div>*@
    <button type="submit" class="btn btn-primary">Save</button>
}